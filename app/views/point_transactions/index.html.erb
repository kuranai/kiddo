<% content_for :title, "#{@user.name} - Transaction History" %>

<div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4 mb-6">
  <div>
    <h1 class="text-3xl font-bold">Transaction History</h1>
    <p class="text-base-content/70">Points earned and spent by <%= @user.name %></p>
  </div>
  <div class="flex gap-2">
    <%= link_to user_path(@user), class: "btn btn-ghost" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Profile
    <% end %>
  </div>
</div>

<!-- Summary Stats -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
  <div class="stats shadow">
    <div class="stat">
      <div class="stat-title">Total Earned</div>
      <div class="stat-value text-success">+<%= @user.point_transactions.earnings.sum(:amount) %></div>
      <div class="stat-desc">Points from completed todos</div>
    </div>
  </div>

  <div class="stats shadow">
    <div class="stat">
      <div class="stat-title">Total Spent</div>
      <div class="stat-value text-error"><%= @user.point_transactions.spendings.sum(:amount) %></div>
      <div class="stat-desc">Points used for rewards</div>
    </div>
  </div>

  <div class="stats shadow">
    <div class="stat">
      <div class="stat-title">Current Balance</div>
      <div class="stat-value text-primary"><%= @user.points_balance %></div>
      <div class="stat-desc">Available to spend</div>
    </div>
  </div>
</div>

<!-- Transaction List -->
<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <h2 class="card-title">All Transactions</h2>
    
    <% if @transactions.any? %>
      <div class="space-y-3">
        <% @transactions.each do |transaction| %>
          <div class="flex justify-between items-center p-4 bg-base-200 rounded-lg hover:bg-base-300 transition-colors">
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-1">
                <% if transaction.earning? %>
                  <svg class="w-5 h-5 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                <% else %>
                  <svg class="w-5 h-5 text-error" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 12H6"></path>
                  </svg>
                <% end %>
                <div class="font-medium"><%= transaction.description %></div>
              </div>
              
              <div class="text-sm text-base-content/60 space-y-1">
                <div><%= transaction.created_at.strftime("%B %d, %Y at %I:%M %p") %></div>
                
                <% if transaction.todo.present? %>
                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    <span>From todo: <%= link_to transaction.todo.title, todo_path(transaction.todo), class: "text-primary hover:underline" %></span>
                  </div>
                <% end %>
                
                <% if transaction.reward.present? %>
                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                    <span>For reward: <%= link_to transaction.reward.title, reward_path(transaction.reward), class: "text-primary hover:underline" %></span>
                  </div>
                <% end %>
              </div>
            </div>
            
            <div class="text-right">
              <div class="text-lg font-bold <%= transaction.amount > 0 ? 'text-success' : 'text-error' %>">
                <%= transaction.amount > 0 ? '+' : '' %><%= transaction.amount %>
              </div>
              <div class="text-xs text-base-content/60 capitalize">
                <%= transaction.transaction_type %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="w-24 h-24 mx-auto text-base-content/30 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="text-xl font-semibold mb-2">No transactions yet</h3>
        <p class="text-base-content/60 mb-4">
          <% if @user == current_user %>
            Complete todos to start earning points!
          <% else %>
            <%= @user.name %> hasn't earned or spent any points yet.
          <% end %>
        </p>
        <%= link_to "Browse Todos", todos_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
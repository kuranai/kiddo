<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold">Welcome back, <%= current_user.name %>! ðŸ‘‹</h1>
      <p class="text-base-content/70">Let's see what needs to be done today</p>
    </div>
    <div class="stats shadow">
      <div class="stat">
        <div class="stat-title">My Points</div>
        <div class="stat-value text-primary"><%= current_user.points_balance %></div>
      </div>
    </div>
  </div>

  <!-- Family Overview (Parents Only) -->
  <% if current_user.parent? %>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Family Overview</h2>
        <div class="stats stats-vertical lg:stats-horizontal shadow">
          <div class="stat">
            <div class="stat-title">Family Members</div>
            <div class="stat-value"><%= @users.count %></div>
          </div>
          <div class="stat">
            <div class="stat-title">Total Family Points</div>
            <div class="stat-value text-primary"><%= @total_family_points %></div>
          </div>
          <div class="stat">
            <div class="stat-title">Active Todos</div>
            <div class="stat-value"><%= @active_todos_count %></div>
            <div class="stat-desc">Pending completion</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Family Members -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <div class="flex justify-between items-center mb-4">
          <h2 class="card-title">Family Members</h2>
          <%= link_to "Add Member", new_user_path, class: "btn btn-primary btn-sm" %>
        </div>
        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
          <% @users.each do |user| %>
            <div class="card bg-base-200 shadow-sm">
              <div class="card-body p-4">
                <div class="flex items-center space-x-3">
                  <div class="avatar">
                    <div class="w-12 rounded-full bg-primary text-primary-content flex items-center justify-center">
                      <span class="font-bold"><%= user.name.first.upcase %></span>
                    </div>
                  </div>
                  <div>
                    <h3 class="font-semibold"><%= user.name %></h3>
                    <p class="text-sm text-base-content/70">
                      <%= user.role.humanize %> â€¢ <%= user.points_balance %> points
                    </p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Quick Actions -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Quick Actions</h2>
      <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-4">
        <%= link_to new_todo_path, class: "btn btn-primary btn-lg" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Create Todo
        <% end %>
        
        <%= link_to todos_path(filter: 'mine'), class: "btn btn-outline btn-lg" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          My Todos
          <% if @my_pending_todos > 0 %>
            <div class="badge badge-warning"><%= @my_pending_todos %></div>
          <% end %>
        <% end %>

        <% if current_user.parent? %>
          <%= link_to rewards_path, class: "btn btn-outline btn-lg" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12z" />
            </svg>
            Manage Rewards
          <% end %>
        <% end %>

        <%= link_to rewards_path, class: "btn btn-outline btn-lg" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          Browse Rewards
          <% if @affordable_rewards > 0 %>
            <div class="badge badge-success"><%= @affordable_rewards %></div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Status Update -->
  <div class="alert alert-success">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
    <span>
      <strong>Phase 5 Complete!</strong> 
      Full todo and rewards system is ready! Create todos, earn points, and redeem rewards.
    </span>
  </div>
</div>
